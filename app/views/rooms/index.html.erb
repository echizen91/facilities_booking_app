<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h1>Rooms</h1>
</div>

<table class="table table-hover table-dark">
  <thead>
    <tr>
      <th>Location</th>
      <th>Capacity</th>
      <th>Classification</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.location %></td>
        <td><%= room.capacity %></td>
        <td><%= room.classification %></td>
        <td><%= link_to 'Show', room, class:"btn text-secondary btn-sm btn-primary"%></td>
        <td><%= link_to 'Edit', edit_room_path(room), class:"btn text-secondary btn-sm btn-primary" %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn text-secondary btn-sm btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path, class:"btn text-secondary btn-sm btn-primary"%>
<br>
<%= link_to("Back to main", { controller: "bookings", action: "app_index" }, class:"btn text-secondary btn-sm btn-primary") %>
