<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h1>Bookings</h1>
</div>

<table class="table table-hover table-dark">
  <thead>
    <tr>
      <th>Booking Name</th>
      <th>User Department</th>
      <th>Location</th>
      <th>Capacity</th>
      <th>Classification</th>
      <th>Startdate</th>
      <th>Enddate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.user.name %></td>
        <td><%= booking.user.department %></td>
        <td><%= booking.room.location %></td>
        <td><%= booking.room.capacity %></td>
        <td><%= booking.room.classification %></td>
        <td><%= booking.startdate %></td>
        <td><%= booking.enddate %></td>
        <td><%= link_to 'Show', booking, class:"btn text-secondary btn-sm btn-primary" %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking), class:"btn text-secondary btn-sm btn-primary"%></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn text-secondary btn-sm btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', new_booking_path, class:"btn text-secondary btn-sm btn-primary" %>
<br>
<%= link_to("Back to main", { controller: "bookings", action: "app_index" }, class:"btn text-secondary btn-sm btn-primary") %>
